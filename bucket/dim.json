{
    "version": "0.1.0",
    "description": "realesrgan-ncnn-vulkan项目的可交互命令行",
    "homepage": "https://github.com/akirco/aki-apps",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://db-1258833316.cos.ap-shanghai.myqcloud.com/dim.7z",
            "hash": "ED5128F1FCE188687742AAF7C3D083BF2E9B469076220139F801E2F325D46072"
        }
    },
    "pre_install": [
        "Move-Item -Path \"$dir\\dim*\\*\" -Destination \"$dir\"",
        "Remove-Item \"$dir\\dim\" -Force -Recurse"
    ],
    "bin": "dim.exe",
    "installer": {
        "script": [
            "Write-Output 'dim path:'+$(scoop prefix dim)",
            "$env:dim = $(scoop prefix dim)",
            "[System.Environment]::SetEnvironmentVariable('dim',$env:dim,'User')",
            "Write-Output 'EnvironmentVariable is Ok , enjoy it'"
        ]
    },
    "notes":[
        "please add the fllowing script to $Profile , if nothing, if you use windows PowerShell you can touch ",
        "'~\\Documents\\WindowsPowerShell\\Microsoft.PowerShell_profile.ps1'",
        "if you use PowerShell core, you can touch '~\\Documents\\PowerShell\\Microsoft.PowerShell_profile.ps1' ",
        "script:",
        "'$Env:PATH += $env:dim+';'",
        "[System.Environment]::SetEnvironmentVariable('path',$Env:PATH,'User')'"
    ]
}
