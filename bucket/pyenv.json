{
    "version": "3.1.1",
    "description": "Simple python version management tool for switching between multiple versions of Python.",
    "homepage": "https://pyenv-win.github.io/pyenv-win/",
    "license": "MIT",
    "notes": "You can specify the PYTHON_BUILD_MIRROR_URL environment variable and run 'pyenv update' to speed up downloads.",
    "url": [
        "https://raw.githubusercontent.com/akirco/aki-apps/refs/heads/master/bin/utils.ps1",
        "https://github.com/pyenv-win/pyenv-win/archive/v3.1.1.zip"
    ],
    "hash": [
        "b1f55f3bc85b28fdeff9701acc81415dda599b469f24027f538dbf13b1c7af87",
        "a7481ccaf1f2328702e4a854a65793e95639f40dc63dd89782d160536f6b1ed0"
    ],
    "extract_dir": "pyenv-win-3.1.1",
    "pre_install": "if (!(Test-Path \"$persist_dir\\pyenv-win\\version\")) { New-Item \"$dir\\pyenv-win\\version\" | Out-Null }",
    "post_install": [
        ". \"$dir\\utils.ps1\"",
        "$BIN_PATH = Resolve-Path \"$dir\\..\\$version\\pyenv-win\\bin\"",
        "$SHIMS_PATH = Resolve-Path \"$dir\\..\\$version\\pyenv-win\\shims\"",
        "Write-Host `nAdding $BIN_PATH to PATH environment variable...",
        "AddToPath $BIN_PATH",
        "Write-Host `nAdding $SHIMS_PATH to PATH environment variable...",
        "AddToPath $SHIMS_PATH"
    ],
    "pre_uninstall": [
        ". \"$dir\\utils.ps1\"",
        "$BIN_PATH = Resolve-Path \"$dir\\..\\$version\\pyenv-win\\bin\"",
        "$SHIMS_PATH = Resolve-Path \"$dir\\..\\$version\\pyenv-win\\shims\"",
        "Write-Host `nRemoving $BIN_PATH to PATH environment variable...",
        "RemoveFromPath $BIN_PATH",
        "Write-Host `nRemoving $SHIMS_PATH to PATH environment variable...",
        "RemoveFromPath $SHIMS_PATH"
    ],
    "env_set": {
        "PYENV": "$dir\\pyenv-win",
        "PYENV_ROOT": "$dir\\pyenv-win",
        "PYENV_HOME": "$dir\\pyenv-win",
        "PYTHON_BUILD_MIRROR_URL": "https://mirrors.huaweicloud.com/python/"
    },
    "persist": [
        "pyenv-win\\version",
        "pyenv-win\\shims",
        "pyenv-win\\versions",
        "pyenv-win\\install_cache"
    ],
    "checkver": {
        "github": "https://github.com/pyenv-win/pyenv-win"
    },
    "autoupdate": {
        "url": [
            "https://raw.githubusercontent.com/akirco/aki-apps/refs/heads/master/bin/utils.ps1",
            "https://github.com/pyenv-win/pyenv-win/archive/v$version.zip"
        ],
        "extract_dir": "pyenv-win-$version"
    }
}